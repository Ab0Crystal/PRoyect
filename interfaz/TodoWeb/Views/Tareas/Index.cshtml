@model IEnumerable<TodoWeb.Models.Tarea>

<h1>Mis Tareas</h1>

@if (!Model.Any())
{
    <p>No hay tareas disponibles.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Título</th>
                <th>Descripción</th>
                <th>Prioridad</th>
                <th>Fecha de Vencimiento</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tarea in Model)
            {
                <tr>
                    <td>@tarea.Titulo</td>
                    <td>@tarea.Descripcion</td>
                    <td>@tarea.Prioridad</td>
                    <td>@tarea.FechaVencimiento.ToString("dd/MM/yyyy")</td>
                    <td>@(tarea.Completado ? "Completada" : "Pendiente")</td>
                    <td>
                        <a href="@Url.Action("Edit", "Tareas", new { id = tarea.Id })" class="btn btn-warning btn-sm">Editar</a>
                        <a href="@Url.Action("Details", "Tareas", new { id = tarea.Id })" class="btn btn-info btn-sm">Ver</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

